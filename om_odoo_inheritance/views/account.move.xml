<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit" model="ir.ui.view"> <!-- any id you went -->
            <field name="name">account.move.inherit</field> <!-- any name you went -->
            <field name="model">account.move</field> <!-- the field you will inherit it -->
            <field name="inherit_id" ref="account.view_move_form"/> <!-- ref is external id -->
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                    <field name="line_number"/>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='product_id']" position="after">
                    <field name="line_number"/>
                </xpath>
                <!--//field search in field but /field search direct in field-->
            </field>
        </record>
    </data>
</odoo>
